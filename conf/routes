# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

#Race Routes
GET     /race                       controllers.RaceController.getAllRaces()
GET     /race/:raceId               controllers.RaceController.getRace(raceId: Long)

#Stage Routes
GET     /stage                      controllers.StageController.getStages
GET     /stage/:stageId             controllers.StageController.getStage(stageId : Long)

#Rider Routes
GET     /:stageId/rider             controllers.RiderController.getRiders(stageId : Long)
GET     /rider/:riderId             controllers.RiderController.getRider(riderId : Long)

#Racegroup Routes
GET     /:stageId/racegroup                  controllers.RaceGroupController.getAllRaceGroups(stageId : Long)
GET     /:stageId/racegroup/:raceGroupId     controllers.RaceGroupController.getRaceGroup(raceGroupId: Long, stageId : Long)
POST    /:stageId/racegroup                  controllers.RaceGroupController.addRaceGroup(stageId : Long)

#Notifcation Routes
GET     /:stageId/notification               controllers.NotificationController.getNotifications(stageId : Long)
GET     /:stageId/notification/:timestamp    controllers.NotificationController.getNotificationsByTimestamp(timestamp : Long, stageId : Long)
DELETE  /:stageId/notification               controllers.NotificationController.deleteAllNotifications(stageId : Long)

#RiderStageConnection Routes
GET     /:stageId/riderStageConnection              controllers.RiderStageConnectionController.getRiderStageConnections(stageId : Long)
GET     /:stageId/riderStageConnection/:riderId     controllers.RiderStageConnectionController.getRiderStageConnection(stageId : Long, riderId : Long)
PUT     /riderStageConnection/:rSCId                controllers.RiderStageConnectionController.updateRiderStageConnection(rSCId : Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
